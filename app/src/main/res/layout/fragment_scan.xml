<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/section_vertical_margin"
        android:paddingTop="@dimen/double_section_vertical_margin"
        android:background="@color/colorPrimary">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center_horizontal"
                  android:layout_centerHorizontal="true">
        <RelativeLayout android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:id="@+id/images_container"
                        android:layout_gravity="center_horizontal|center_vertical">
            <ImageView
                    android:id="@+id/scan_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="72dp"
                    android:layout_marginTop="57dp"
                    android:src="@drawable/ic_scan_scanning"/>
            <ImageView
                    android:id="@+id/scan_clip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
                android:id="@+id/scanning_title"
                android:text="@string/scanning_tag_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:textColor="@android:color/white"/>
        <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_marginTop="@dimen/section_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:visibility="gone"/>
        <TextView
                android:id="@+id/scanning_description"
                android:text="@string/scanning_tag_description"
                android:lineSpacingMultiplier="1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/section_vertical_margin"
                android:layout_marginBottom="@dimen/section_vertical_margin"
                android:textColor="@android:color/white"/>
    </LinearLayout>
    <ImageButton
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_close"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"/>
</RelativeLayout>
