<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/purple_background">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:theme="@style/ToolBarStyle"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_below="@+id/toolbar"
            android:background="@drawable/purple_background"
            android:id="@+id/upper_layout">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.35"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|right"
                android:id="@+id/tv_registered_date"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:gravity="center"/>
        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.35"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|left"
                android:id="@+id/tv_pup_id"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:ellipsize="end"
        android:maxLines="1"/>
    </LinearLayout>

<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/upper_layout"
        android:background="@android:color/white">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/white">
        <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginTop="64dp"
                android:layout_gravity="center"
                android:textAllCaps="true"/>
        <TextView
            android:id="@+id/tv_product_subline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:gravity="center"
            android:text="Speedmaster speedy Tuesday"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/product_info"
                android:textSize="16sp"
                android:textColor="@color/cyan"
        />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:background="@color/very_light_grey"
                android:layout_margin="@dimen/separator_height">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/owner"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:drawableLeft="@drawable/ic_owner"
                    android:drawablePadding="10dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_owner"
                    android:gravity="left"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:background="@color/very_light_grey"
                android:layout_margin="@dimen/separator_height">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/object_id"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:drawableLeft="@drawable/ic_fingerprint"
                    android:drawablePadding="7dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_object_id"
                    android:gravity="left"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:background="@color/very_light_grey"
                android:layout_margin="@dimen/separator_height">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/material"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:drawableLeft="@drawable/ic_material"
                    android:drawablePadding="7dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_material"
                    android:gravity="left"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:background="@color/very_light_grey"
                android:layout_margin="@dimen/separator_height">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/brand"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:drawableLeft="@drawable/ic_brand"
                    android:drawablePadding="7dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_brand"
                    android:gravity="left"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/very_light_grey"
                android:padding="@dimen/activity_vertical_margin"
                android:paddingStart="30dp"
                android:layout_margin="@dimen/separator_height">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/comments"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:layout_marginStart="25dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_comments"
                    android:gravity="start"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="25dp"/>
        </LinearLayout>
        <Button
                android:id="@+id/back_to_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button_purple_border"
                android:text="@string/back_to_start_button_text"
                android:textColor="@color/bright_violet"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/section_vertical_margin"/>
    </LinearLayout>
</ScrollView>
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/thumbnail_layout"
                    android:layout_below="@+id/toolbar"
                    android:layout_centerHorizontal="true">
        <com.twinofthings.helpers.CircleImageView
                android:id="@+id/thumbnail"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
    </RelativeLayout>
</RelativeLayout>

