<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:paddingTop="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:id="@+id/upper_layout">
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="0.35"
                      android:layout_height="wrap_content"
                      android:layout_gravity="bottom|end"
                    android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center"
                    android:text="@string/registered"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center"
                    android:id="@+id/tv_registered_date"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:padding="1dp"/>
        </LinearLayout>

        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:gravity="center"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="0.35"
                      android:layout_height="wrap_content"
                      android:layout_gravity="bottom|end"
                      android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center"
                    android:text="@string/pup_id"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="bottom|center"
                    android:id="@+id/tv_pup_id"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:padding="1dp"
                    android:textColor="@android:color/white"
                    android:ellipsize="end"
                    android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/upper_layout"
            android:id="@+id/general_info_container"
            android:background="@android:color/white">
        <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginTop="64dp"
                android:layout_gravity="center"/>
        <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:gravity="center"/>
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
        >
            <TextView
                    android:id="@+id/tv_product_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/identity_info"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="5dp"
                    android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/general_info_container"
        android:background="@android:color/white">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/white">
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:background="@color/colorPrimary"
                android:layout_margin="@dimen/separator_height">
            <ImageView android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:layout_gravity="center"
                       android:layout_marginEnd="10dp"
                       android:src="@drawable/ic_owner"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="@string/owner"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:id="@+id/tv_owner"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
            />
        </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:paddingStart="30dp"
                    android:background="@color/colorPrimary"
                    android:layout_margin="@dimen/separator_height">
                <ImageView android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:layout_gravity="center"
                           android:layout_marginEnd="10dp"
                           android:src="@drawable/ic_object_id"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="@string/object_id"
                        android:textSize="18sp"
                        android:layout_marginStart="5dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:id="@+id/tv_object_id"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                />
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:paddingStart="30dp"
                    android:background="@color/colorPrimary"
                    android:layout_margin="@dimen/separator_height">
                <ImageView android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:layout_gravity="center"
                           android:layout_marginEnd="10dp"
                           android:src="@drawable/ic_material"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="@string/material"
                        android:textSize="18sp"
                        android:layout_marginStart="5dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:id="@+id/tv_material"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                />
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="30dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary">
                <ImageView android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:layout_gravity="center"
                           android:layout_marginEnd="10dp"
                           android:src="@drawable/ic_more"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="@string/more_detail"
                        android:textSize="18sp"
                        android:layout_marginStart="5dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_comments"
                    android:gravity="start"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="35dp"/>
        </LinearLayout>
        <Button
                android:id="@+id/back_to_start"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:background="@drawable/button_grey_border"
                android:text="@string/home_button_text"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/section_vertical_margin"
                android:layout_marginBottom="@dimen/section_vertical_margin"/>
        </LinearLayout>
</ScrollView>
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/thumbnail_layout"
                    android:layout_below="@+id/toolbar"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
        <com.twinofthings.helpers.CircleImageView
                android:id="@+id/thumbnail"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
    </RelativeLayout>
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/ToolBarStyle"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <RelativeLayout
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:gravity="right">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_toolbar_right" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>

