<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:paddingTop="?attr/actionBarSize"
            android:background="@drawable/purple_background"
            android:id="@+id/upper_layout">
        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.35"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center"
                android:id="@+id/tv_registered_date"
                android:gravity="bottom|end"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:padding="1dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:gravity="center"/>
        <TextView
                android:layout_width="0dp"
                android:layout_weight="0.35"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center"
                android:id="@+id/tv_pup_id"
                android:gravity="bottom|start"
                android:textSize="11sp"
                android:padding="1dp"
                android:textColor="@android:color/white"
                android:ellipsize="end"
        android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/upper_layout"
            android:id="@+id/general_info_container"
            android:background="@android:color/white">
        <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginTop="64dp"
                android:layout_gravity="center"/>
        <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:gravity="center"/>
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
        >
            <TextView
                    android:id="@+id/tv_product_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/product_info"
                    android:textSize="16sp"
                    android:textColor="@color/cyan"
                    android:padding="5dp"
                    android:layout_centerInParent="true"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignEnd="@+id/tv_product_info"
                    android:layout_alignStart="@+id/tv_product_info"
                    android:layout_below="@+id/tv_product_info"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/cyan"/>
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/general_info_container"
        android:background="@android:color/white">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/white">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:background="@color/very_light_grey"
                android:layout_margin="@dimen/separator_height">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/owner"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:drawableLeft="@drawable/ic_owner"
                    android:drawablePadding="10dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_owner"
                    android:gravity="left"
                    android:textColor="@color/tuatara"
                    android:textSize="14sp"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:background="@color/very_light_grey"
                android:layout_margin="@dimen/separator_height">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/object_id"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:drawableLeft="@drawable/ic_fingerprint"
                    android:drawablePadding="7dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_object_id"
                    android:gravity="left"
                    android:textColor="@color/tuatara"
                    android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:background="@color/very_light_grey"
                android:layout_margin="@dimen/separator_height">
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/material"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:drawableLeft="@drawable/ic_material"
                    android:drawablePadding="7dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_material"
                    android:gravity="left"
                    android:textColor="@color/tuatara"
                    android:textSize="14sp"/>
        </LinearLayout>
        <!--<LinearLayout-->
                <!--android:orientation="horizontal"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="10dp"-->
                <!--android:paddingStart="30dp"-->
                <!--android:background="@color/very_light_grey"-->
                <!--android:layout_margin="@dimen/separator_height">-->
            <!--<TextView-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_weight="0.4"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:gravity="left"-->
                    <!--android:text="@string/brand"-->
                    <!--android:textSize="14sp"-->
                    <!--android:textColor="@color/grey"-->
                    <!--android:drawableLeft="@drawable/ic_brand"-->
                    <!--android:drawablePadding="7dp"/>-->
            <!--<TextView-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_weight="0.6"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/tv_brand"-->
                    <!--android:gravity="left"-->
                    <!--android:textColor="@android:color/black"-->
                    <!--android:textSize="14sp"/>-->
        <!--</LinearLayout>-->
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/very_light_grey"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:layout_margin="@dimen/separator_height">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/comments"
                    android:textSize="14sp"
                    android:textColor="@color/grey"
                    android:layout_marginStart="25dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_comments"
                    android:gravity="start"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="25dp"/>
        </LinearLayout>
        <Button
                android:id="@+id/back_to_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button_purple_border"
                android:text="@string/back_to_start_button_text"
                android:textColor="@color/bright_violet"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/section_vertical_margin"
                android:layout_marginBottom="@dimen/section_vertical_margin"/>
        </LinearLayout>
</ScrollView>
    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/thumbnail_layout"
                    android:layout_below="@+id/toolbar"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
        <com.twinofthings.helpers.CircleImageView
                android:id="@+id/thumbnail"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
    </RelativeLayout>
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            app:theme="@style/ToolBarStyle"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
</RelativeLayout>

