<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/section_vertical_margin"
        android:paddingTop="@dimen/double_section_vertical_margin"
        android:background="@color/colorPrimary">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center_horizontal"
                  android:layout_centerHorizontal="true">
        <RelativeLayout android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:id="@+id/images_container"
                        android:layout_gravity="center_horizontal|center_vertical">
            <ImageView
                    android:id="@+id/scan_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_scan_shared"/>
            <ImageView
                    android:id="@+id/scan_clip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_validate_identity"/>
        </RelativeLayout>
        <TextView
                android:id="@+id/validate_identity_title"
                android:text="@string/validate_identity_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/section_vertical_margin"
                android:textColor="@android:color/black"/>
        <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_marginTop="@dimen/section_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:visibility="gone"/>
        <TextView
                android:id="@+id/validate_identity_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/section_vertical_margin"
                android:layout_marginBottom="@dimen/section_vertical_margin"
                android:visibility="gone"
                android:text="@string/loading"
                android:textColor="@android:color/darker_gray"/>
    </LinearLayout>
</RelativeLayout>
