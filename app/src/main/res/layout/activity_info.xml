<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorPrimary">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/ToolBarStyle"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <RelativeLayout
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:gravity="right">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_toolbar_right" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_centerInParent="true"
                  android:id="@+id/linearLayout">
        <ImageView android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:layout_gravity="center_horizontal|center_vertical"
                   android:layout_margin="@dimen/info_horizontal_margin"
                   android:src="@drawable/ic_info_logo"/>
        <TextView
                android:text="@string/info_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textSize="13sp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.5"
                android:layout_margin="@dimen/info_horizontal_margin"
                android:textColor="@android:color/white"/>
        <TextView
                android:text="@string/info_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_margin="@dimen/info_horizontal_margin"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@android:color/white"/>
        <TextView
                android:text="@string/info_association"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_margin="@dimen/info_horizontal_margin"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@android:color/white"/>
        <TextView
                android:text="@string/info_riddle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_margin="@dimen/info_horizontal_margin"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@android:color/white"/>
        <TextView
                android:text="@string/info_bigchain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_margin="@dimen/info_horizontal_margin"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@android:color/white"/>

    </LinearLayout>
    <ImageButton
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>