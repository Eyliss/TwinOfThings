<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorPrimary">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:theme="@style/ToolBarStyle"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="@drawable/rounded_rectangle"
                  android:padding="@dimen/info_horizontal_margin"
                  android:layout_centerInParent="true"
                  android:id="@+id/linearLayout">
        <TextView
                android:text="@string/auth_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:gravity="left"
                android:layout_marginBottom="@dimen/info_horizontal_margin"
                android:lineSpacingMultiplier="1.5"
                android:textColor="@android:color/black"/>
        <TextView
                android:text="@string/auth_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:gravity="left"
                android:lineSpacingMultiplier="1.5"
                />
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_gravity="left|center_vertical"
                       android:layout_margin="@dimen/info_horizontal_margin"
                       android:src="@drawable/ic_fg_40px"
                        android:id="@+id/iv_fingerprint"/>
            <TextView
                    android:id="@+id/tv_auth_result"
                    android:text="@string/auth_sensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="11sp"
                    android:layout_toRightOf="@id/iv_fingerprint"
            />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
