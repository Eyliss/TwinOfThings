<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/purple_background"
        xmlns:app="htatp://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:elevation="4dp"
            app:theme="@style/ToolBarStyle"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@android:color/white">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.9"
                    android:background="@android:color/white" android:weightSum="1">
                <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/brand"-->
                <!--android:gravity="left"-->
                <!--style="@style/TextAppearance.AppCompat.Medium"-->
                <!--android:padding="@dimen/section_padding"-->
                <!--android:layout_margin="@dimen/separator_height"-->
                <!--android:drawableLeft="@drawable/ic_brand"-->
                <!--android:drawablePadding="@dimen/activity_horizontal_margin"-->
                <!--android:hint="@string/brand"/>-->
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/product_name"
                        android:gravity="left"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_margin="@dimen/separator_height"
                        android:drawableLeft="@drawable/ic_product_name"
                        android:drawablePadding="10dp"
                        android:maxLines="1"
                        android:hint="@string/product_name"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="@string/timestamp"
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:drawableLeft="@drawable/ic_timestamp"
                            android:drawablePadding="10dp"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:id="@+id/tv_timestamp" android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/owner"
                        android:gravity="left"
                        android:maxLines="1"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_margin="@dimen/separator_height"
                        android:drawableLeft="@drawable/ic_owner"
                        android:drawablePadding="10dp"
                        android:hint="@string/owner"/>
                <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/twin_id"-->
                <!--android:gravity="left"-->
                <!--style="@style/TextAppearance.AppCompat.Medium"-->
                <!--android:padding="@dimen/section_padding"-->
                <!--android:layout_margin="@dimen/separator_height"-->
                <!--android:drawableLeft="@drawable/ic_id"-->
                <!--android:drawablePadding="@dimen/activity_horizontal_margin"/>-->
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/twin_location"
                        android:hint="@string/location"
                        android:gravity="left"
                        android:maxLines="1"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:drawableLeft="@drawable/ic_my_location"
                        android:drawablePadding="8dp"/>
                <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/material"-->
                <!--android:gravity="left"-->
                <!--style="@style/TextAppearance.AppCompat.Medium"-->
                <!--android:padding="@dimen/section_padding"-->
                <!--android:layout_margin="@dimen/separator_height"-->
                <!--android:drawableLeft="@drawable/ic_material"-->
                <!--android:drawablePadding="@dimen/activity_horizontal_margin"/>-->
                <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/color"-->
                <!--android:gravity="left"-->
                <!--style="@style/TextAppearance.AppCompat.Medium"-->
                <!--android:padding="@dimen/section_padding"-->
                <!--android:layout_margin="@dimen/separator_height"-->
                <!--android:drawableLeft="@drawable/ic_color"-->
                <!--android:drawablePadding="@dimen/activity_horizontal_margin"/>-->
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/very_light_grey"
                        android:layout_margin="@dimen/separator_height"
                        android:padding="5dp">
                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/comments"
                            android:gravity="start"
                            android:maxLines="3"
                            android:textColor="@android:color/black"
                            style="@style/TextAppearance.AppCompat.Medium"
                            android:hint="@string/comments_hint"
                            android:background="@color/very_light_grey"
                            android:layout_marginStart="@dimen/activity_horizontal_margin"/>
                </LinearLayout>
                <Button
                        android:id="@+id/create_digital_twin_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/create_twin_button_bg"
                        android:text="@string/create_twin_button_text"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/section_vertical_margin"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

