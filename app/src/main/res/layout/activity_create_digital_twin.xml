<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:background="@drawable/purple_background">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin"
            android:background="@android:color/white">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@android:color/white" android:weightSum="1">
            <!--<EditText-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/brand"-->
                    <!--android:gravity="left"-->
                    <!--style="@style/TextAppearance.AppCompat.Medium"-->
                    <!--android:padding="@dimen/section_padding"-->
                    <!--android:layout_margin="@dimen/separator_height"-->
                    <!--android:drawableLeft="@drawable/ic_brand"-->
                    <!--android:drawablePadding="@dimen/activity_horizontal_margin"-->
                    <!--android:hint="@string/brand"/>-->
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_name"
                    android:gravity="left"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_margin="@dimen/separator_height"
                    android:drawableLeft="@drawable/ic_product_name"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:maxLines="1"
                    android:hint="@string/product_name"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/separator_height"
            >
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/timestamp"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:drawableLeft="@drawable/ic_timestamp"
                        android:drawablePadding="@dimen/activity_horizontal_margin"/>
                <DatePicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dp_timestamp"
                        android:datePickerMode="spinner"
                        android:calendarViewShown="false"
                android:background="@android:color/transparent"/>
            </LinearLayout>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/owner"
                    android:gravity="left"
                    android:maxLines="1"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_margin="@dimen/separator_height"
                    android:drawableLeft="@drawable/ic_owner"
                    android:drawablePadding="@dimen/activity_horizontal_margin"
                    android:hint="@string/owner"/>
            <!--<EditText-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/twin_id"-->
                    <!--android:gravity="left"-->
                    <!--style="@style/TextAppearance.AppCompat.Medium"-->
                    <!--android:padding="@dimen/section_padding"-->
                    <!--android:layout_margin="@dimen/separator_height"-->
                    <!--android:drawableLeft="@drawable/ic_id"-->
                    <!--android:drawablePadding="@dimen/activity_horizontal_margin"/>-->
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/twin_location"
                    android:hint="@string/location"
                    android:gravity="left"
                    android:maxLines="1"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_margin="@dimen/separator_height"
                    android:drawableLeft="@drawable/ic_place_black_24dp"
                    android:drawablePadding="@dimen/activity_horizontal_margin"/>
            <!--<EditText-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/material"-->
                    <!--android:gravity="left"-->
                    <!--style="@style/TextAppearance.AppCompat.Medium"-->
                    <!--android:padding="@dimen/section_padding"-->
                    <!--android:layout_margin="@dimen/separator_height"-->
                    <!--android:drawableLeft="@drawable/ic_material"-->
                    <!--android:drawablePadding="@dimen/activity_horizontal_margin"/>-->
            <!--<EditText-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/color"-->
                    <!--android:gravity="left"-->
                    <!--style="@style/TextAppearance.AppCompat.Medium"-->
                    <!--android:padding="@dimen/section_padding"-->
                    <!--android:layout_margin="@dimen/separator_height"-->
                    <!--android:drawableLeft="@drawable/ic_color"-->
                    <!--android:drawablePadding="@dimen/activity_horizontal_margin"/>-->
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/very_light_grey"
                    android:layout_margin="@dimen/separator_height"
                    android:padding="5dp">
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/comments"
                        android:gravity="start"
                        android:maxLines="3"
                        android:textColor="@android:color/black"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:hint="@string/comments_hint"
                        android:background="@color/very_light_grey"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"/>
            </LinearLayout>
            <Button
                    android:id="@+id/create_digital_twin_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/create_twin_button_bg"
                    android:text="@string/create_twin_button_text"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/section_vertical_margin"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
