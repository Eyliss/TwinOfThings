<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/green_background">
    <ImageView android:layout_width="150dp"
               android:layout_height="150dp"
               android:layout_centerHorizontal="true"
               android:src="@drawable/ic_scan_success"
               android:layout_above="@id/centered_text"/>
    <TextView
            android:id="@+id/centered_text"
            android:text="@string/create_twin_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Medium.Inverse"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_margin="@dimen/section_vertical_margin"/>
    <Button
            android:id="@+id/scan_tag_button"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_scan_tag_button"
            android:drawableTint="@android:color/white"
            android:layout_below="@id/centered_text"
            android:background="@drawable/button_white_border"
            android:text="@string/scan_tag_button_text"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"/>
    <Button
            android:id="@+id/back_to_start"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/scan_tag_button"
            android:padding="20dp"
            android:background="@drawable/button_white_border"
            android:text="@string/back_to_start_button_text"
            android:textColor="@android:color/white"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>