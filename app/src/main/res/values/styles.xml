<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <!--<item name="android:editTextStyle">@style/EditTextStyle</item>-->
    </style>
    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textViewStyle">@style/TextViewCustomFont</item>
        <item name="android:background">@drawable/dotted_bg</item>
        <item name="android:homeAsUpIndicator">@drawable/back_arrow</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>
    <style name="TextViewCustomFont">
        <item name="fontPath">fonts/CooperHewitt-Book.otf</item>
    </style>
    <!--<style name="EditTextStyle" parent="Widget.AppCompat.EditText">-->
        <!--<item name="colorControlNormal">@color/dodger_blue</item>-->
        <!--<item name="colorControlActivated">@color/dodger_blue</item>-->
        <!--<item name="colorControlHighlight">@color/dodger_blue</item>-->
    <!--</style>-->
</resources>
